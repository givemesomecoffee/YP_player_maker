<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="background">@color/yp_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/yp_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yp_black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:windowBackground">?colorPrimary</item>
    </style>
    <style name="Theme.PlaylistMaker.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>