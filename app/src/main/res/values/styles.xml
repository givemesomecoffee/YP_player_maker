<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Primary" parent="">

    </style>

    <style name="CustomWidget.MaterialComponents.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ColorSwitchStyle</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/yp_blue</item>
        <item name="colorSurface">@color/yp_text_gray</item>
        <item name="colorOnSurface">@color/yp_light_Gray</item>
    </style>

    <style name="Search">
        <item name="android:textAppearance">@style/Primary.Regular.16</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/title_search</item>
        <item name="android:background">@null</item>
        <item name="android:drawableStart">@drawable/ic_search_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">@color/yp_text_secondary_inverted</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColorHint">@color/yp_text_primary</item>
    </style>

    <style name="Widget.AppTheme.FilledButton" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/yp_blue</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>
</resources>